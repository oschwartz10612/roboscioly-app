                var emails = ["None", "dkarndt@fcpsschools.net","NMBandman@fcpsschools.net","NBehrooz@fcpsschools.net","SCBergesen@fcpsschools.net","aebolden@fcpsschools.net","MTBowersox@fcpsschools.net","BABrand@fcpsschools.net","RMBurford@fcpsschools.net","cjbuschman@fcpsschools.net","PCarpenter@fcpsschools.net","achang1@fcpsschools.net","achang@fcpsschools.net","rbcollidge1@fcpsschools.net","CHConwell@fcpsschools.net","kmcrenshaw@fcpsschools.net","ANCuadrado@fcpsschools.net","CJDelGrosso@fcpsschools.net","crdevine@fcpsschools.net","kedirga@fcpsschools.net","JEEvans@fcpsschools.net","GDGardiner@fcpsschools.net","bjgildea@fcpsschools.net","mgomperts@fcpsschools.net","VSGrewal@fcpsschools.net","JBHiles@fcpsschools.net","GKhemani@fcpsschools.net","mfkoeppen@fcpsschools.net","dkraemer@fcpsschools.net","kvkraemer@fcpsschools.net","PCLaguna@fcpsschools.net","ellawson@fcpsschools.net","KALongworth@fcpsschools.net","tglusby@fcpsschools.net","mkmccoy@fcpsschools.net","AJMcKee@fcpsschools.net","KAMiller5@fcpsschools.net","cschumpp@fcpsschools.net","srshepard@fcpsschools.net","MSim@fcpsschools.net","aksmall@fcpsschools.net","DBSupernor@fcpsschools.net","CVThomas@fcpsschools.net","SLWaigand@fcpsschools.net","ANWong@fcpsschools.net","SZarek@fcpsschools.net"];
                if(typeof data === "undefined") {
                  for ( var i = 0; i < options.length; i++ ) { %>
                  <option value="<%=emails[ i ] %>">
                    <%= options[i] %>
                  </option>
                  <%
                  }
                }
                else {
                  for ( var i = 0; i < options.length; i++ ) {
                      var selected = ( data.math_teacher == emails[i] ) ? "selected" : "";
                      %>
                  <option value="<%=emails[ i ] %>" <%=selected %>>
                    <%= options[i] %>
                  </option>
                  <%
                  }
                }
                %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="science_teacher">Science teacher for recommendation</label>
              <div>
                <select id="science_teacher" name="science_teacher" class="custom-select" required="required">
                  <%
                var options = [ "None","Ana Tuszka","Abbie Achatz","Faith Angove","Christopher Bird","Holly Cho","Julie Corbett","Neena Dosaj","Megan Dygve","Evan Fisher","Meaghan Fry","Douglas Gross","Travis Hess","Jennifer Holder","Tory Karg","Kathryn Krouse","Kristen Marker","Eric Misencik","James Nickle","Steven Rothman","Jeff Stevens","Austin Walter","Bradley Webster","Alison Wolfe","Kristin Webster","Juliana Stroup","Karen McLean" ];
                var emails = [ "None","artuszka@fcpsschools.net","abachatz@fcpsschools.net","FLAngove@fcpsschools.net","CWBird@fcpsschools.net","htcho@fcpsschools.net","jlcorbett@fcpsschools.net","NDosaj@fcpsschools.net","MPDygve@fcpsschools.net","edfisher@fcpsschools.net","mmfry@fcpsschools.net","DAGross@fcpsschools.net","TSHess@fcpsschools.net","jholder1@fcpsschools.net","VGKarg@fcpsschools.net","kokrouse@fcpsschools.net","kmmarker@fcpsschools.net","esmisencik@fcpsschools.net","JENickle@fcpsschools.net","smrothman@fcpsschools.net","jwstevens@fcpsschools.net","awwalter@fcpsschools.net","BSWebster@fcpsschools.net","amwolfe@fcpsschools.net","kswebster@fcpsschools.net","jstroup@fcpsschools.net","khmclean@fcpsschools.net"];
                if(typeof data === "undefined") {
                  for ( var i = 0; i < options.length; i++ ) { %>
                  <option value="<%=emails[ i ] %>" <%=selected %>>
                    <%= options[i] %>
                  </option>
                  <%
                  }
                }
                else {
                  for ( var i = 0; i < options.length; i++ ) {
                      var selected = ( data.science_teacher == emails[i] ) ? "selected" : "";
                      %>
                  <option value="<%=emails[ i ] %>" <%=selected %>>
                    <%= options[i] %>
                  </option>
                  <%
                  }
                }
                %>
                </select>
              </div>
            </div>
          </div>
        </div>

        <div class="col-6">
          <div class="jumbotron pt-4 pb-3">
            <h4>Classes</h4>
            <div class="form-group">
              <label>Which science and/or technology courses have you, are currently, or signed up to take next year?</label>
              <div>
                <%
                if(typeof data != "undefined") {
                var boxes = ["Biology 1", "Biology 1 HN", "IB Biology SL", "IB Biology I (HL)", "IB Biology II HL", "Chemistry 1", "IB Chemistry I", "IB Chemistry II SL", "IB Chemistry II HL", "Physics", "Active Physics", "IB Physics I", "IB Physics II SL", "IB Physics II HL", "Geosystems", "Geosystems HN", "Astronomy", "IB Environmental Sys SL", "Oceanography", "Human Anatomy & Physiology"];
                  for ( var i = 0; i < boxes.length; i++ ) {
                    var checked = ( data['science_class_' + i] == boxes[i] ) ? "checked" : "";
                    if(checked == "checked") {
                      var option = "";
                    }
                    else {
                      var option = boxes[i];
                    }
                %>
                <div class="custom-controls-stacked">
                  <div class="custom-control custom-checkbox">
                    <input type="hidden" name="science_class_<%=i%>" value="<%=data['science_class_' + i]%>"><input
                      id="science_class_<%=i%>" type="checkbox" aria-describedby="science_classHelpBlock"
                      class="custom-control-input" onclick="this.previousSibling.value='<%=option%>'" <%=checked %>>
                    <label for="science_class_<%=i%>" class="custom-control-label">
                      <%=boxes[i]%></label>
                  </div>
                </div>
                <%
                      }
                    } else {
                      var boxes = ["Biology 1", "Biology 1 HN", "IB Biology SL", "IB Biology I (HL)", "IB Biology II HL", "Chemistry 1", "IB Chemistry I", "IB Chemistry II SL", "IB Chemistry II HL", "Physics", "Active Physics", "IB Physics I", "IB Physics II SL", "IB Physics II HL", "Geosystems", "Geosystems HN", "Astronomy", "IB Environmental Sys SL", "Oceanography", "Human Anatomy & Physiology"];
                        for ( var i = 0; i < boxes.length; i++ ) {
                      %>
                <div class="custom-controls-stacked">
                  <div class="custom-control custom-checkbox">
                    <input type="hidden" name="science_class_<%=i%>" value=""><input id="science_class_<%=i%>"
                      type="checkbox" aria-describedby="science_classHelpBlock" class="custom-control-input"
                      onclick="this.previousSibling.value='<%=boxes[i]%>'">
                    <label for="science_class_<%=i%>" class="custom-control-label">
                      <%=boxes[i]%></label>
                  </div>
                </div>
                <%
                            }
                    }
                    %>
              </div>
            </div>
            <div class="form-group">
              <label>What Math classes have you, are currently, or signed up to take?</label>
              <div>
                <%
                if(typeof data != "undefined") {
                var boxes = ["Algebra 1", "Geometry", "Geometry HN", "Algebra 2", "Algebra 2 HN", "Algebra 2 with Trig HN", "Discrete Math", "Trigonometry", "Pre-Calculus With Trig", "AP Statistics", "AP Calculus AB", "AP Calculus BC", "Probability & Statistics", "IB Math Studies SL", "IB Math I SL", "IB Math II SL", "IB Math I HL", "IB Math II HL", "IB Computer Science SL", "Multivariable Calculus", "Matrix Algebra", "IB Math Analysis I", "IB Math Application I"];
                  for ( var i = 0; i < boxes.length; i++ ) {
                    if(typeof data != "undefined") {
                      var checked = ( data['math_' + i] == boxes[i] ) ? "checked" : "";
                    }
                      if(checked == "checked") {
                        var option = "";
                      }
                      else {
                        var option = boxes[i];
                      }
                      %>
                <div class="custom-controls-stacked">
                  <div class="custom-control custom-checkbox">
                    <input type="hidden" name="math_<%=i%>" value="<%=data['math_' + i]%>"><input id="math_<%=i%>"
                      type="checkbox" aria-describedby="science_classHelpBlock" class="custom-control-input"
                      onclick="this.previousSibling.value='<%=option%>'" <%=checked %>>
                    <label for="math_<%=i%>" class="custom-control-label">
                      <%=boxes[i]%></label>
                  </div>
                </div>
                <%
                    }
                  } else {
                    var boxes = ["Algebra 1", "Geometry", "Geometry HN", "Algebra 2", "Algebra 2 HN", "Algebra 2 with Trig HN", "Discrete Math", "Trigonometry", "Pre-Calculus With Trig", "AP Statistics", "AP Calculus AB", "AP Calculus BC", "Probability & Statistics", "IB Math Studies SL", "IB Math I SL", "IB Math II SL", "IB Math I HL", "IB Math II HL", "IB Computer Science SL", "Multivariable Calculus", "Matrix Algebra", "IB Math Analysis I", "IB Math Application I"];
